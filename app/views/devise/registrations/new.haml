.supermain.login
  .container
    %img{alt: "Logo", src: asset_path("login_logo.png")}
  .login-logo.container
    %h2 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field{placeholder: "Email"}
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, placeholder: "Email", required: true
      .field
        = f.label :password
        - if @validatable
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "off", placeholder: "Password", required: true
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", required: true
      .actions
        = f.submit "Sign up"
    = render "devise/shared/links"